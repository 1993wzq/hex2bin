<?xml version="1.0"?>


<GPULSE_BUILD>
	<PROJECTS>
		<PROJECT name="Hex2BinTest" platform="MinGW">
			<BC name="cmdoptios"  />
			<BC name="common"  />
			<BC name="iniconfig"  />
			<BC name="logger"  />
			<BC name="generator"  />
			<BC name="hex"  />
			<BC name="GACmain"  />
			<BC name="testcpp"  /> 
		</PROJECT>		
	</PROJECTS>

	<TOOLS>
		<COMPILER name="GNU">
			<BIN_PATH>C:/MinGW/bin</BIN_PATH>
			<CC>gcc.exe</CC> 		<!-- for C language   compile -->
			<CPP>g++.exe</CPP>		<!-- for C++ language compile -->
			<AS>gcc.exe</AS>        <!-- for ASM language compile -->
			<AR>ar.exe</AR>			<!-- for object archive       -->
			<LD>gcc.exe</LD>		<!-- for object and lib link  -->
			
			<LANGUAGE name="c" >
				<SUFFIX>.c</SUFFIX>	
				<COMPILE_FLAGS cflag="FLAG_0">
					<ADD_MACRO name="__GNU__0" />
					<ADD_MACRO name="__CPU__0" value="TC27x"/>
					<ADD_INCLUDE>C:/MinGW1</ADD_INCLUDE>
					<ADD_FLAG>-c</ADD_FLAG>
					<ADD_FLAG>-O0 -g </ADD_FLAG>
					<ADD_FLAG>-DCRC_BLOCK_SIZE=256u</ADD_FLAG>
					<ADD_FLAG>-MMD -MF $(basename $@).d</ADD_FLAG>   <!-- cannot delete -->
					<ADD_FLAG>@_gen/mak/incs.mak</ADD_FLAG>          <!-- cannot delete -->
				</COMPILE_FLAGS>
				
				<COMPILE_FLAGS cflag="CPPFLAG_0">
					<ADD_FLAG>-c</ADD_FLAG>	
					<ADD_FLAG>-O0 -g </ADD_FLAG>
					<ADD_FLAG>-DCRC_BLOCK_SIZE=256u</ADD_FLAG>
					<ADD_FLAG>-MMD -MF $(basename $@).d</ADD_FLAG>   <!-- cannot delete -->
					<ADD_FLAG>@_gen/mak/incs.mak</ADD_FLAG>	         <!-- cannot delete -->				
				</COMPILE_FLAGS>
			</LANGUAGE>
					
			<LINK_FLAGS>
				<LINK_FLAG linkflag="LFLAG_0" >
					<ADD_MACRO name="__CPU1__" />
					<ADD_MACRO name="__CPU__" value="TC27x"/>					
					<ADD_LINK_FILE></ADD_LINK_FILE>
					<ADD_LINK_INCLUDE></ADD_LINK_INCLUDE>
					<ADD_LIBPATH>C:/MinGW</ADD_LIBPATH>
					<ADD_FLAG>-Os icons/demo.o</ADD_FLAG>
					<ADD_FLAG>-Wl,--stack=0x100000000</ADD_FLAG>
					<ADD_FLAG>-lstdc++</ADD_FLAG>	
					<ADD_OBJ_FILE></ADD_OBJ_FILE>
					<ADD_LIB_FILE></ADD_LIB_FILE>			
				</LINK_FLAG>
			</LINK_FLAGS>	

			<!-- <POST_BUILDS> -->
				<!-- <POST_BUILD>where make</POST_BUILD> -->
				<!-- <POST_BUILD>post-build.bat</POST_BUILD> -->
			<!-- </POST_BUILDS>			 -->
		</COMPILER>
	</TOOLS>

	<PLATFORMS>		
		<PLATFORM name="MinGW">
			<COMPILER suffix=".exe">GNU</COMPILER>
		</PLATFORM>		
	</PLATFORMS>	
</GPULSE_BUILD>

